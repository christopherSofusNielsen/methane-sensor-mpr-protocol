        "-D __TEST_MODE",
        "-g",
        "${workspaceFolder}\\src\\MRPP\\*.c",
        "${workspaceFolder}\\src\\MRPP\\util\\*.c",
        "${workspaceFolder}\\test\\MRPP\\__test_mrpp.c",
        "${workspaceFolder}\\test\\helpers\\*.c",
        "${workspaceFolder}\\Unity\\src\\*.c",
        "-o",
        "${workspaceFolder}\\bin\\test_MRPP.exe"
